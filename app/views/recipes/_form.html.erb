<%= form_for @recipe do |f| %>
  Title:<br> 
  <%= f.text_field :title %><br>
  <%= f.fields_for :ingredients do | i |%> <br>
    <%= i.label "Ingredient Name:"%><br>
    <%= i.text_field :name %> <br>
    <%= i.label "Quantity"%><br>
    <%= i.text_field :quantity %> <br>
  <% end %>
  <%= f.submit %>
<% end %>
