<%= form_for @recipe do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br>
  <br>
  <%= f.label "Ingredients: " %>
  <%= f.fields_for :ingredients do |ingredient_form| %>
    <br>
    <%= ingredient_form.label "Name:" %>
    <%= ingredient_form.text_field :name %>
    <br>
    <%= ingredient_form.label "Quantity:" %>
    <%= ingredient_form.text_field :quantity %>
    <br>
  <% end %>
  <br>
  <%= f.submit %>
<% end %>
